{
    "name": "rougin/wildfire",
    "description": "Query Builder wrapper for the Codeigniter framework.",
    "keywords": ["codeigniter", "query", "builder", "php", "wildfire"],
    "homepage": "https://rougin.github.io/wildfire/",
    "license": "MIT",
    "authors":
    [
        {
            "name": "Rougin Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "http://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require":
    {
        "php": ">=5.4.0",
        "rougin/spark-plug": "~0.5"
    },
    "require-dev":
    {
        "phpunit/phpunit": "~4.2|~5.7",
        "scrutinizer/ocular": "~1.1.0"
    },
    "autoload":
    {
        "psr-4":
        {
            "Rougin\\Wildfire\\": "src"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Rougin\\Wildfire\\": "tests"
        }
    },
    "scripts":
    {
        "test": "phpunit"
    },
    "extra":
    {
        "branch-alias":
        {
            "dev-master": "1.0-dev"
        }
    },
    "suggest":
    {
        "rougin/codeigniter": "Core functionality of the Codeigniter framework.",
        "rougin/combustor": "MVC code generator for the Codeigniter framework.",
        "rougin/refinery": "\"Ready-to-eat\" migrations for the Codeigniter framework."
    }
}